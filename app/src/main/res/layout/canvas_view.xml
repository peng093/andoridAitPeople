<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <com.example.atpeople.myapplication.customview.ScanRadar
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:background="@color/material_orange_100"
    android:layout_gravity="center"
    />
    <com.example.atpeople.myapplication.customview.ArrowIcon
        android:layout_marginTop="30dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        />
    <LinearLayout
        android:id="@+id/lly_lly"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        >

    </LinearLayout>
    <ImageView
        android:id="@+id/iv_text"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <ImageView
        android:id="@+id/iv_text2"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <ImageView
        android:id="@+id/iv_text3"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
</LinearLayout>